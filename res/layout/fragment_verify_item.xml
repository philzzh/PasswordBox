<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" 
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="20dp"
    android:layout_marginTop="30dp">
    <EditText
        android:id="@+id/nameEdit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/new_fragment_name_Text"/>
    <EditText
        android:id="@+id/descriptionEdit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:hint="@string/new_fragment_description_Text"/>
    
    <EditText
        android:id="@+id/passwordEdit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:hint="@string/new_fragment_password_Text"/>
    
    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:background="@drawable/abc_ab_share_pack_holo_light"
        android:orientation="horizontal">
        <Button
            android:id="@+id/verifyButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/abc_ab_stacked_transparent_dark_holo"
            android:text="@string/verify_fragment_verify_Btn"/>
        <Button
            android:id="@+id/deleteButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/abc_ic_clear_holo_light"
            android:text="@string/verify_fragment_delete_Btn"/>
       <Button
            android:id="@+id/updateButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:background="@drawable/abc_ic_cab_done_holo_dark"
            android:text="@string/verify_fragment_update_Btn" />

        
        
    </LinearLayout>
</LinearLayout>